@model BookStore.Domain.Domain.BooksInShoppingCart

<h1>Add Book to Shopping cart</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="AddToCartConfirmed">
            <input type="hidden" asp-for="BookId" />
            <div class="form-group">
                <h5>Book Title : @Model.Book.Title</h5>
             
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add To Cart" class="btn-info" />
            </div>
        </form>
    </div>
</div>