@model BookStore.Domain.Domain.Books

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="@Model.BookImage" alt="Book image" style="height: 350px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <div class="card" style="height: 100%; overflow: hidden;">
                <div class="card-body" style="height: 100%; overflow-y: auto;">
                    <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
                    <p class="card-text"><strong>Price:</strong> @Html.DisplayFor(model => model.Price)</p>
                    <p class="card-text"><strong>Release Date:</strong> @Html.DisplayFor(model => model.ReleaseDate)</p>
                    <p class="card-text"><strong>Publisher:</strong> @Html.DisplayFor(model => model.Publisher.Name)</p>
                    <p class="card-text"><strong>Author:</strong> @Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName)</p>
                </div>
                <div class="card-footer" style="position: absolute; bottom: 0; width: 100%;">

                    <a asp-controller="Books" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-info">Add to Cart</a>
                    |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

